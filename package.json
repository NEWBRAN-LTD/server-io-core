{
  "name": "server-io-core",
  "version": "2.0.0-beta.2",
  "description": "Developement server using Koa with Socket.io reload and Javascript remote debugger",
  "main": "index.mjs",
  "files": [
    "src",
    "index.mjs",
    "cli.mjs",
    "rollup.js"
  ],
  "scripts": {
    "test": "ava",
    "prepublishOnly": "nyc ava",
    "test:dev": "DEBUG=server-io-core:test* ava",
    "cli": "DEBUG=server-io-core* node ./cli",
    "test:qunit": "DEBUG=server-io-core:* node ./tests/qunit/run-qunit.mjs",
    "test:rollup": "rollup -c ./rollup.config.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/NEWBRAN-LTD/server-io-core.git"
  },
  "keywords": [
    "Koa",
    "Node.js",
    "Debugger",
    "development",
    "server"
  ],
  "author": "Joel Chu <joelchu@foxmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NEWBRAN-LTD/server-io-core/issues"
  },
  "homepage": "https://github.com/NEWBRAN-LTD/server-io-core#README",
  "dependencies": {
    "@to1source/event": "^1.5.3",
    "chalk": "^5.0.1",
    "cheerio": "^1.0.0-rc.11",
    "chokidar": "^3.5.3",
    "fancy-log": "^2.0.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "kefir": "^3.8.8",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-nginx": "^1.1.3",
    "koa-send": "^5.0.1",
    "lodash": "^4.17.21",
    "lodash.template": "^4.5.0",
    "meow": "^10.1.3",
    "open": "^8.4.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "stacktrace-js": "^2.0.2"
  },
  "devDependencies": {
    "preact": "^10.8.1",
    "preact-render-to-string": "^5.2.0",
    "preact-router": "^4.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.1",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.3.0",
    "jest": "^28.1.1",
    "jest-preset-preact": "^4.0.5",
    "preact-cli": "^3.3.5",
    "sirv-cli": "2.0.2",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "ava": "^4.3.0",
    "debug": "^4.3.4",
    "eslint": "^8.18.0",
    "eslint-config-xo": "^0.41.0",
    "esm": "^3.2.25",
    "gulp": "^4.0.2",
    "husky": "^8.0.1",
    "koa-socket-2": "^2.0.0",
    "node-fetch": "^3.2.6",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "qunit": "^2.19.1",
    "rollup": "^2.75.7",
    "superkoa": "^1.0.3",
    "through2": "^4.0.2",
    "ws": "^8.8.0"
  },
  "ava": {
    "files": [
      "tests/**/*.test.mjs",
      "dev/**/*.test.mjs"
