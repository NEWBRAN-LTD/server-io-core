{
  "name": "server-io-core",
  "version": "1.0.0-beta.4",
  "description": "Developement server using Koa with Socket.io reload and Javascript remote debugger",
  "main": "index.js",
  "scripts": {
    "test": "ava --verbose",
    "devtest": "DEBUG=server-io-core* ava --verbose",
    "cli": "DEBUG=server-io-core* node ./cli",
    "pretest": "eslint . --fix",
    "precommit": "lint-staged",
    "demo": "DEBUG=server-io-core* node ./__tests__/fixtures/demo"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/newbranltd/server-io-core.git"
  },
  "keywords": [
    "Koa",
    "Node.js",
    "Debugger",
    "development",
    "server"
  ],
  "author": "Joel Chu",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/newbranltd/server-io-core/issues"
  },
  "homepage": "https://gitlab.com/newbranltd/server-io-core#README",
  "dependencies": {
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "chokidar": "^2.0.4",
    "fancy-log": "^1.3.2",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.2",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.0.0",
    "koa-nginx": "^1.1.3",
    "koa-send": "^5.0.0",
    "meow": "^5.0.0",
    "opn": "^5.3.0",
    "socket.io": "^2.1.1",
    "stacktrace-js": "^2.0.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "ava": "^1.2.1",
    "debug": "^4.1.1",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "koa-socket-2": "^1.0.17",
    "lint-staged": "^8.1.4",
    "nyc": "^13.3.0",
    "prettier": "^1.13.7",
    "socket.io-client": "^2.1.1",
    "superkoa": "^1.0.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ],
    "overrides": [
      {
        "files": "src/**/*.js"
      }
    ]
  },
  "ava": {
    "files": [
      "__tests__/**/*.test.js",
      "!__tests__/fixtures/**/*",
      "!demo/**/*",
      "!src/**/*"
    ],
    "verbose": true,
    "tap": false,
    "failFast": true
  },
  "bin": {
    "server-io-core": "./cli.js",
    "srvio": "./cli.js"
  },
  "engines": {
    "node": ">=7.00"
  }
}
