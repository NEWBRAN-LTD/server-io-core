{
  "name": "server-io-core",
  "version": "1.4.0",
  "description": "Developement server using Koa with Socket.io reload and Javascript remote debugger",
  "main": "index.js",
  "files": [
    "src",
    "index.js",
    "cli.js"
  ],
  "scripts": {
    "test": "ava",
    "prepublishOnly": "nyc ava",
    "devtest": "DEBUG=server-io-core:test* ava",
    "cli": "DEBUG=server-io-core* node ./cli",
    "__pretest__": "eslint . --fix",
    "__precommit__": "lint-staged",
    "demo": "DEBUG=server-io-core* node ./tests/fixtures/demo",
    "test:option": "DEBUG=server-io-core* ava ./tests/options.test.js",
    "test:favicon": "ava ./tests/favicon.test.js",
    "test:inject": "DEBUG=server-io-core* ava ./tests/inject.test.js",
    "test:socket": "DEBUG=server-io-core* ava ./tests/proxy-socket.test.js",
    "test:proxy": "DEBUG=server-io-core* ava ./tests/proxy.test.js",
    "run:proxied": "DEBUG=server-io-core* node ./tests/fixtures/proxy.js",
    "test:demo": "DEBUG=server-io-core* node ./tests/fixtures/run.js",
    "start:server": "DEBUG=server-io-core* node ./tests/fixtures/test-proxy.js",
    "start:client": "DEBUG=server-io-core* node ./tests/fixtures/test-client.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/NEWBRAN-LTD/server-io-core.git"
  },
  "keywords": [
    "Koa",
    "Node.js",
    "Debugger",
    "development",
    "server"
  ],
  "author": "Joel Chu <joelchu@foxmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NEWBRAN-LTD/server-io-core/issues"
  },
  "homepage": "https://github.com/NEWBRAN-LTD/server-io-core#README",
  "dependencies": {
    "chalk": "4.1.2",
    "cheerio": "^1.0.0-rc.11",
    "chokidar": "^3.5.3",
    "fancy-log": "^2.0.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "kefir": "^3.8.8",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-nginx": "^1.1.3",
    "koa-send": "^5.0.1",
    "lodash": "^4.17.21",
    "meow": "^10.1.2",
    "open": "^8.4.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "stacktrace-js": "^2.0.2"
  },
  "devDependencies": {
    "ava": "^4.3.0",
    "debug": "^4.3.4",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.41.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.1",
    "koa-socket-2": "^2.0.0",
    "lint-staged": "^13.0.2",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "superkoa": "^1.0.3",
    "through2": "^4.0.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ],
    "overrides": [
      {
        "files": "src/**/*.js"
      }
    ]
  },
  "ava": {
    "files": [
      "tests/**/*.test.js"
    ],
    "ignoredByWatcher": [
      "tests/fixtures/**/*",
      "demo/**/*",
      "src/**/*"
    ],
    "verbose": true,
    "tap": false,
    "failFast": true
  },
  "bin": {
    "server-io-core": "./cli.js"
  }
}
